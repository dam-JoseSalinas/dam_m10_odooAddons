<!--VISTE DE LIBRARY-->
<odoo>
  <data>
    <!--VISTA LLISTA DE REGISTRES-->
    <record model="ir.ui.view" id="library.book_list">
      <field name="name">library book list</field>
      <field name="model">library.book</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="author"/>
        </tree>
      </field>
    </record>

    <!--VISTA DE FORMULARIO-->
    <record  model="ir.ui.view" id="library.book_form">
      <field name="name">library book form</field>
      <field name="model">library.book</field>
      <field name="arch" type="xml">
        <form string="Book form">
          <group>
            <field name="name"/>
            <field name="author"/>
          </group>
        </form>
      </field>
    </record>
    
    <!--VISTA DE ACCION AL ABRIR UN REGISTRO-->
    <record model="ir.actions.act_window" id="library.book_action">
      <field name="name">Books</field>
      <field name="res_model">library.book</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!--VISTA EN EL MENU-->
    <menuitem 
      name="Library JS"
      id="library.menu_root"/>
    <menuitem 
      name="Books"
      id="library.menu_1"
      parent="library.menu_root"/>
    <menuitem 
      name="Book"
      id="library.menu_1_list"
      parent="library.menu_1"
      action="library.book_action"/>




